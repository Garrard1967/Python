# Magic 8 ball // Магический шар 8
import random

print('Привет Мир, я магический шар, и я знаю ответ на любой твой вопрос!')

name = input('Введите свое имя: ')
print(f'Рад познакомиться, {name}!')

def new_game():
    print('Хотите еще раз сыграть? Если да то введите: "да"')
    answ_y = ['Да', 'да', 'д', 'Yes', 'yes', 'y', 'lf']
    answ = input()
    if answ in answ_y:
        return True
    else:
        return False

answers = ['Бесспорно', 'Предрешено', 'Никаких сомнений', 'Определённо да', 'Можешь быть уверен в этом',
           'Мне кажется - да', 'Вероятнее всего', 'Хорошие перспективы', 'Знаки говорят - да', 'Да',
           'Пока неясно, попробуй снова', 'Спроси позже', 'Лучше не рассказывать', 'Сейчас нельзя предсказать', 'Сконцентрируйся и спроси опять',
            'Даже не думай', 'Мой ответ - нет', 'По моим данным - нет', 'Перспективы не очень хорошие', 'Весьма сомнительно']

def choice():
    while True:
        print('Ответ на какой вопрос ты хочешь узнать?')
        question = input('Напиши его: ')
        print(*random.sample(answers, 1))
        if new_game() != True:
            print('Возвращайся если возникнут вопросы!')
            break
        else:
            print('Я очень рад, что ты хочешь снова задать мне вопрос!')

choice()
